{
  "name": "tg-bot",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "12.x",
    "npm": "6.14.8",
    "yarn": "1.22.x"
  },
  "scripts": {
    "start": "SET NODE_ENV=development&nodemon --exec babel-node src/bot.js",
    "deploy": "git push heroku master",
    "lint": "eslint src/**"
  },
  "repository": "https://github.com/tjnk24/tg-bot.git",
  "author": "tjnk24 <tjnk24@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "dotenv": "^8.2.0",
    "jsdom": "^16.4.0",
    "lodash.get": "^4.4.2",
    "mongoose": "^5.10.6",
    "request-promise": "^4.2.6",
    "telegraf": "^3.38.0",
    "telegraf-i18n": "^6.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "nodemon": "^2.0.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "no-unused-expressions": "off",
      "no-unused-vars": "warn",
      "no-warning-comments": ["warn", {
        "terms": [""],
        "location": "start"
    }]
    }
  }
}
