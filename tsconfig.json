{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["src/controllers/*"],
            "@locales/*": ["src/locales/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models/*": ["src/models/*"],
            "@types/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"],
        }
    },
    "include": ["./src/**/*", "src/locales/*.json", "src/types"]
}
